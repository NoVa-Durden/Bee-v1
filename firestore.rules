rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isControleurCentral() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'controleur_central';
    }

    // Allow all authenticated users to read
    match /{document=**} {
      allow read: if isAuthenticated();
    }

    // Allow controleur_central to write to all collections
    match /inducteurs/{docId} {
      allow write: if isControleurCentral();
    }

    match /activites/{docId} {
      allow write: if isControleurCentral();
    }

    match /comptes/{docId} {
      allow write: if isControleurCentral();
    }

    match /unites/{docId} {
      allow write: if isControleurCentral();
    }

    match /years/{docId} {
      allow write: if isControleurCentral();
    }

    match /data/{docId} {
      allow write: if isControleurCentral();
    }

    match /ind/{docId} {
      allow write: if isControleurCentral();
    }

    // Special collection for batch operations
    match /imports/{docId} {
      allow write: if isControleurCentral();
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isControleurCentral();
    }
  }
}